{% extends 'formsbase.html.twig' %}

{% block title %}Hello ProduitController!
{% endblock %}

{% block body %}

	<!-- ============================================================== -->
	<!-- wrapper  -->
	<!-- ============================================================== -->
		<div class="dashboard-wrapper"> <div class="container-fluid dashboard-content">
			<div class="row">
				<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
					<div class="row">
						<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">

							<!-- basic form  -->
							<!-- ============================================================== -->
								<div class="row"> <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">

									<div class="card">
										<div class="card-header">
											<h5 class="mb-0">
												Black lister un client
											</h5>
										</div>
										<div class="card-body">
											{{ form_start(form, { 'attr': {'class': ''}}) }}
											<div class="form-group">
												<label class="col-form-label">nom</label>
												{{ form_widget(form.nom, { 'attr': {'class': 'form-control', 'value' : client.nom}}) }}
											</div>
											<div class="form-group">
												<label class="col-form-label">prenom</label>
												{{ form_widget(form.prenom, { 'attr': {'class': 'form-control', 'value' : client.prenom}}) }}
											</div>
											<div class="form-group">
												<label class="col-form-label">telephone</label>
												{{ form_widget(form.telephone, { 'attr': {'class': 'form-control', 'value' : client.telephone}}) }}
											</div>
											<div class="form-group">
												<label class="col-form-label">mobile</label>
												{{ form_widget(form.mobile, { 'attr': {'class': 'form-control', 'value' : client.mobile}}) }}
											</div>
											<div class="form-group">
												<label class="col-form-label">adrresse</label>
												{{ form_widget(form.adrresse, { 'attr': {'class': 'form-control', 'value' : client.adrresse}}) }}
											</div>
											<div class="form-group">
												<label class="col-form-label">ville</label>
												{{ form_widget(form.ville, { 'attr': {'class': 'form-control', 'value' : client.ville}}) }}
											</div>
											<div class="form-group">
												<label class="col-form-label">wilaya</label>
												{{ form_widget(form.wilaya, { 'attr': {'class': 'form-control', 'value' : client.wilaya}}) }}
											</div>
											<div class="form-group">
												<label class="col-form-label">Blocked</label>
												{{ form_widget(form.Blocked, { 'attr': {'class': 'form-control', 'value' : client.Blocked}}) }}
											</div>
											<div class="form-group">
												<label class="col-form-label">raison</label>
												{{ form_widget(form.raison, { 'attr': {'class': 'form-control', 'value' : client.raison}}) }}
											</div>
											<a class="" href="{{path('produit')}}">annuler</a>
											<button type="submit" class="btn btn-primary">Enregistrer</button>
											{{ form_end(form) }}
										</div>

									</div>
								</div>
							</div>
							<!-- ============================================================== -->
							<!-- end basic form  -->

						</div>
					</div>

					<div class="row"></div>
				</div>
			</div>
			<!-- ============================================================== -->
		<!-- footer -->
			<!-- ============================================================== -->

			<!-- ============================================================== -->
			<!-- end footer -->
			<!-- ============================================================== -->
		</div>
	</div>
{% endblock %}
