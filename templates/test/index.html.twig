{% extends 'base.html.twig' %}

{% block title %}Hello TestController!{% endblock %}

{% block body %}
<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }

    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }
</style>

{{ form_start(form) }}
<div class="form-group">
    {{ form_widget(form.name, {'attr': {'placeholder': 'Entrer votre nom'} })  }}
</div>
<div class="form-group">
    {{ form_widget(form.phonenumber, {'attr': {'placeholder': 'Entrer votre nom'} })  }}
</div>
<div class="form-group">
    {{ form_widget(form.email, {'attr': {'placeholder': 'Entrer votre email'} })  }}
</div>

<button type="submit" class="btn btn-primary">Ajouter</button>



{{ form_end(form) }}
{% endblock %}